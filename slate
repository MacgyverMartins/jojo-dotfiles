# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
bind right:shift;ctrl;cmd       resize +1% +0
bind left:shift;ctrl;cmd        resize -1% +0
bind up:shift;ctrl;cmd          resize +0   -1%
bind down:shift;ctrl;cmd        resize +0   +1%
#bind right:ctrl;alt  resize -1% +0 bottom-right
#bind left:ctrl;alt   resize +1% +0 bottom-right
#bind up:ctrl;alt     resize +0   +1% bottom-right
#bind down:ctrl;alt   resize +0   -1% bottom-right

# Push Bindings

#1/4
bind up:ctrl     push up    bar-resize:screenSizeY/5
bind down:ctrl   push down  bar-resize:screenSizeY/5
bind right:ctrl  push right bar-resize:screenSizeX/5
bind left:ctrl   push left  bar-resize:screenSizeX/5
#3/4
bind up:ctrl;cmd;alt;shift     push up    bar-resize:screenSizeY/(1.25)
bind down:ctrl;cmd;alt;shift   push down  bar-resize:screenSizeY/(1.25)
bind left:ctrl;cmd;alt;shift     push left    bar-resize:screenSizeX/(1.25)
bind right:ctrl;cmd;alt;shift   push right  bar-resize:screenSizeX/(1.25)


#1/3
bind right:ctrl;cmd  push right bar-resize:screenSizeX/3
bind left:ctrl;cmd   push left  bar-resize:screenSizeX/3
bind up:ctrl;cmd  push up bar-resize:screenSizeY/3
bind down:ctrl;cmd   push down  bar-resize:screenSizeY/3
#2/3
bind up:ctrl;cmd;alt     push up    bar-resize:screenSizeY/(1.5)
bind down:ctrl;cmd;alt   push down  bar-resize:screenSizeY/(1.5)
bind left:ctrl;cmd;alt     push left    bar-resize:screenSizeX/(1.5)
bind right:ctrl;cmd;alt   push right  bar-resize:screenSizeX/(1.5)

#1/2
bind up:cmd;alt     push up    bar-resize:screenSizeY/2
bind down:cmd;alt   push down  bar-resize:screenSizeY/2
bind left:cmd;alt     push left    bar-resize:screenSizeX/2
bind right:cmd;alt   push right  bar-resize:screenSizeX/2



bind g:cmd grid padding:5 0:6,2 1:8,3

# Nudge Bindings
bind right:shift;alt nudge +10% +0
bind left:shift;alt  nudge -10% +0
bind up:shift;alt    nudge +0   -10%
bind down:shift;alt  nudge +0   +10%

# Throw Bindings
#bind 1:ctrl;alt         throw 0 resize
#bind 2:ctrl;alt         throw 1 resize
#bind 3:ctrl;alt         throw 2 resize
#bind right:ctrl;alt;cmd throw right resize
#bind left:ctrl;alt;cmd  throw left  resize
#bind up:ctrl;alt;cmd    throw up    resize
#bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
#bind right:cmd    focus right
#bind left:cmd     focus left
#bind up:cmd       focus up
#bind down:cmd     focus down
#bind up:cmd;alt   focus behind
#bind down:cmd;alt focus behind

#bind tab:cmd;alt switch
#Bindings

#load config
bind o:ctrl;alt;cmd relaunch
#undo
bind z:ctrl;alt;cmd undo
#throw to next monitor
bind t:ctrl;cmd sequence throw next | move screenOriginX+((screenSizeX-windowSizeX)/2);screenOriginY+((screenSizeY-windowSizeY)/2) windowSizeX;windowSizeY
#centerize
bind y:ctrl;cmd move screenOriginX+((screenSizeX-windowSizeX)/2);screenOriginY+((screenSizeY-windowSizeY)/2) windowSizeX;windowSizeY
#maximize
bind m:ctrl;alt;cmd  move screenOriginX;screenOriginY screenSizeX;screenSizeY




#Layouts
layout Home 'Google Chrome' push up bar-resize:screenSizeY/2
layout Home 'MacVim' corner bottom-left  resize:screenSizeX/(1.5);screenSizeY/2
layout Home 'iTerm' corner bottom-right  resize:screenSizeX/3;screenSizeY/2
bind =:cmd;alt;ctrl layout Home

layout Work-GenericMonitor 'MacVim' push left  bar-resize:screenSizeX/(1.25)
layout Work-GenericMonitor 'iTerm'  push right  bar-resize:screenSizeX/5
bind -:cmd;alt;ctrl layout Work-GenericMonitor

#Window Hints
bind space:cmd hint

#Snapshots
bind 1:cmd;alt snapshot snapshot1 save-to-disk;stack
bind 2:cmd;alt snapshot snapshot2 save-to-disk;stack

bind 1:cmd;alt;ctrl activate-snapshot snapshot1
bind 2:cmd;alt;ctrl activate-snapshot snapshot2





